<Page x:Class="WpfTestingXAML.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTestingXAML"
      mc:Ignorable="d"
      Title="FirstPage" Name="FirstPageName">

    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" MaxWidth="300" MinWidth="100">
                <Viewbox>
                    <TextBlock Text="First Page"/>
                </Viewbox>
                <Button Margin="20 50" Content="Go Back" Click="Button_Click"/>
            </StackPanel>
        </Grid>
</Page>
